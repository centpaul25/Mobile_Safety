<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/safetyFirst"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="-1dp"
            android:src="@drawable/safetyagain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.113" />

        <TextView
            android:id="@+id/reachOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safetyFirst"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:text="When in danger reach out to us"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/safetyFirst"
            app:layout_constraintVertical_bias="0.096" />

        <TextView
            android:id="@+id/swipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reachOut"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:text="Swipe right for shortcut Menu"
            android:textAllCaps="false"
            android:textColor="@color/purple_200"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/audioRec"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipe"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="18dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_baseline_mic_24"
            android:drawablePadding="-145dp"
            android:paddingLeft="120dp"
            android:text="    Audio"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/complaints"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/audioRec"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_baseline_edit_note_24"
            android:drawablePadding="-145dp"
            android:paddingLeft="120dp"
            android:text="    Complaint"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sos"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complaints"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:drawablePadding="-145dp"
            android:onClick="panic"
            android:paddingLeft="120dp"
            android:text="    Panic"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/video"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sos"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_baseline_videocam_24"
            android:drawablePadding="-145dp"
            android:paddingLeft="120dp"
            android:text="     Video"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/find"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_baseline_fmd_good_24"
            android:drawablePadding="-145dp"
            android:paddingLeft="120dp"
            android:textSize="14dp"
            android:text="     Find Me"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/liveStream"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/find"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_baseline_live_tv_24"
            android:drawablePadding="-125dp"
            android:paddingLeft="120dp"
            android:textSize="14dp"
            android:text="     Live Stream"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blueshade"
        android:fitsSystemWindows="true"
        android:textStyle="bold"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-2dp"/>

</androidx.drawerlayout.widget.DrawerLayout>