<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background13"
    android:layout_height="match_parent"
    tools:context=".AudioRecorder">

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Audio Recorder"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="28dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="82dp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopButton"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:background="@color/shade"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="-20dp"
        android:text="Play"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/stopButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHeader"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@color/shade"
        android:drawableLeft="@drawable/ic_baseline_fiber_manual_record_24"
        android:drawablePadding="-10dp"
        android:text="Record"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textHeader"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recordButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="@color/shade"
        android:drawableLeft="@drawable/ic_baseline_stop_24"
        android:drawablePadding="-20dp"
        android:text="Stop"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/recordButton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/btnCancel3"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@id/playButton"
        android:layout_alignTop="@+id/playButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="-60dp"
        android:background="@color/white"
        android:text="Cancel"
        android:textColor="@color/red"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        app:layout_constraintVertical_bias="0.131"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>